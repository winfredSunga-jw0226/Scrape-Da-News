<div class="row">
  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-md">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Notes for Article : </h4>
        </div>
        <div class="modal-body">
          {{#if commented}}
            {{#each}}
              <div class="div-comment text-center">
                <p>{{comment}}</p>
                <button type="button" class="btn btn-danger">X</button>
            </div>  
            {{/each}}
          {{/if}}
          {{#unless commented}}
            <div class="div-comment text-center">No comment for this article yet</div> 
          {{/unless}}
          <br><br>
          <form class="clearfix">
            <textarea id="comment-text"class="form-control" rows="3" placeholder="Add Comment"></textarea>
            <br>
            <button type="submit" class="btn btn-primary pull-right" id="submit-comment" data-dismiss="modal">Save</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

{{#each article}}
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title clearfix">
            <a class="headline-link" href="{{url}}" alt="link for {{headline}}">{{headline}}</a>
            <a class="btn btn-danger unsave-article pull-right" href="#" data-article-id={{_id}}>Unsave</a>
            <!-- Trigger the modal with a button -->
            <a class="btn btn-success comment pull-right" href="#"data-article-id={{_id}} data-article-headline={{headline}} data-toggle="modal" data-target="#myModal">Article Comments</a>
          </h3>
        </div>
        <div class="panel-body">
          <p>{{summary}}</p>
        </div>
      </div>

    </div>
  </div>
{{/each}}